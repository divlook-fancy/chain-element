{
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "ES2018",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"]
        },
        "lib": [
            "ESNext",
            "DOM",
            "ES2020",
            "ES2019",
            "ES2018",
            "ES2017",
            "ES2016",
            "ES2015"
        ],
    }
}
