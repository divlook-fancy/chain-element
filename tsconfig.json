{
    "include": ["src/**/*"],
    "compilerOptions": {
        "target": "ESNext",
        "allowJs": true,
        "declaration": true,
        "outDir": "dist",
        "declarationDir": "@types",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"]
        },
        "lib": ["ESNext", "DOM"],
        "plugins": [
            { "transform": "typescript-transform-paths" },
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ]
    }
}
